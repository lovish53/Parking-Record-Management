<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('../partials/header.ejs')%>
<section id="mid">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
            <h2>Parking Records</h2>
            <a href="/recordadd"><button class="btn btn-warning form-control">New Entry Added Here</button></a>
            <table class="table table-hover">
                <tr>
                    <th>S.No</th>
                    <th>Owner Name</th>
                    <th>Owner Mobile number</th>
                    <th>Vehicle Number</th>
                    <th>Vehicle Type</th>
                    <th>Vehicle IN timw</th>
                    <th>Vehicle Out time</th>
                    <th>Amount charged(in Rs)</th>
                    <th>Vehicle Status</th>
                    <th>Bill</th>
                </tr>
                
                    <%record.forEach((result,key)=>{%>
                        <tr>
                        <td><%=key+1%></td>
                        <td><%=result.Oname%></td>
                        <td><%=result.Omobile%></td>
                        <td><%=result.vno%></td>
                        <td><%=result.vtype%></td>
                        <td><%=result.vin%></td>
                        <td><%=result.vout%></td>
                        <td><%=result.amount%></td>
                        <%if(result.status=='OUT'){%>
                        <td><a href="/parkingupdate/<%=result.id%>"><button disabled><%=result.status%></button></td>
                            <td><a href="/parkingprint/<%=result.id%>"><button>Print</button></a></td>
                       <%}else{%>
                        <td><a href="/parkingupdate/<%=result.id%>"><button><%=result.status%></button></td>
                            <td><a href="/parkingprint/<%=result.id%>"><button disabled>Print</button></a></td>
                       <%}%>
                       
                    </tr>
                    <%})%>

            </table>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer.ejs')%>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>